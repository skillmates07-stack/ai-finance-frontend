{
  "name": "ai-finance-platform",
  "version": "1.0.0",
  "description": "Billion-dollar AI-powered financial management platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next out dist node_modules package-lock.json yarn.lock",
    "fresh-install": "npm run clean && npm install --legacy-peer-deps",
    "safe-build": "npm run lint && npm run type-check && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.3.0",
    "clsx": "^2.1.1",
    "tailwindcss": "^3.4.4",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "lucide-react": "^0.263.1",
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.1.3",
    "react-hot-toast": "^2.4.1",
    "react-hook-form": "^7.51.4",
    "@hookform/resolvers": "^3.3.4",
    "zod": "^3.23.8",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.2.10",
    "recharts": "^2.12.7",
    "chart.js": "^4.4.3",
    "react-chartjs-2": "^5.2.0",
    "axios": "^1.7.2",
    "swr": "^2.2.5",
    "zustand": "^4.5.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie": "^0.6.0",
    "js-cookie": "^3.0.5",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/node": "^20.14.8",
    "@types/lodash": "^4.17.5",
    "@types/uuid": "^9.0.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/cookie": "^0.6.0",
    "@types/js-cookie": "^3.0.6",
    "typescript": "^5.5.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "cross-env": "^7.0.3",
    "@next/bundle-analyzer": "^14.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
